<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD:Factory"
        android:textSize="20sp"
        android:textStyle="bold" />

<!--    <ImageView-->
<!--        android:id="@+id/edit_icon"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_toRightOf="@id/title"-->
<!--        android:src="@drawable/ic_edit" />-->

    <EditText
        android:id="@+id/piid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:hint="PiiD:" />

    <EditText
        android:id="@+id/factory_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/piid"
        android:hint="Factory Name:" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/factory_name"
        android:hint="Date:" />

    <EditText
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:hint="Status:" />

    <EditText
        android:id="@+id/proxyport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:hint="Proxyport:" />

    <EditText
        android:id="@+id/tunnelport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/proxyport"
        android:hint="Tunnelport:" />

    <EditText
        android:id="@+id/steam_pressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tunnelport"
        android:hint="Steam Pressure: bar" />

    <EditText
        android:id="@+id/stream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tunnelport"
        android:hint="Steam Pressure: bar" />

    <EditText
        android:id="@+id/steam_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/steam_pressure"
        android:hint="Steam Flow T/H" />

    <EditText
        android:id="@+id/water_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/steam_flow"
        android:hint="Water Level %" />

    <EditText
        android:id="@+id/power_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_level"
        android:hint="Power Frequency Hz" />
    <EditText
        android:id="@+id/mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_level"
        android:hint="Power Frequency Hz" />
    <EditText
        android:id="@+id/proxy_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_level"
        android:hint="Power Frequency Hz" />
    <EditText
        android:id="@+id/tunnel_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/water_level"
        android:hint="Power Frequency Hz" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/power_frequency"
        android:text="ADD" />

</RelativeLayout>
